{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["ESNext", "dom"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "nodenext",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "nodenext",
    "outDir": "./dist",
    "rootDir": ".",
    "types": ["reflect-metadata"],
    "esModuleInterop": true
  },
  "include": ["src"]
}
